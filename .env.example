# Company Logo API Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database Configuration (choose one)
DB_TYPE=sqlite
# For local SQLite
DB_PATH=./data/companies.db

# For PostgreSQL (Supabase, Neon, Railway, etc.)
# DB_TYPE=postgres
# DATABASE_URL=postgresql://username:password@host:5432/database
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=company_logos
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_SSL=true

# For Supabase
# DB_TYPE=supabase
# SUPABASE_HOST=your-project.supabase.co
# SUPABASE_PASSWORD=your_password
# SUPABASE_DB_URL=postgresql://postgres:password@db.project.supabase.co:5432/postgres

# For Neon
# DB_TYPE=neon
# NEON_DATABASE_URL=postgresql://username:password@ep-host.neon.tech/dbname?sslmode=require

# Cloud Storage Configuration
# ImgBB (Free tier: Unlimited with API key)
IMGBB_API_KEY=your_imgbb_api_key

# Logo Extraction Configuration
LOGO_TIMEOUT=10000
LOGO_MAX_SIZE=5242880

# Third-party Services (optional)
CLEARBIT_API_KEY=
UPLEAD_API_KEY=

# Security
API_KEY_REQUIRED=false
API_KEY=

# CORS Settings
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Cloud Provider URLs (for reference)
# Supabase: https://app.supabase.com/
# Neon: https://neon.tech/
# Railway: https://railway.app/
# PlanetScale: https://planetscale.com/
# ImgBB: https://imgbb.com/
